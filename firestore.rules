
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin';
    }

    function isOrgAdmin(orgId) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userDoc.role == 'admin' && userDoc.organizationId == orgId;
    }
    
    function isOrgMember(orgId) {
       let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
       return userDoc.organizationId == orgId;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Collection: organizations
    match /organizations/{orgId} {
      allow read: if isSuperAdmin() || isOrgMember(orgId);
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || isOrgAdmin(orgId);
      allow delete: if isSuperAdmin();
    }

    // Collection: users
    match /users/{userId} {
      allow read: if isSuperAdmin() || isOwner(userId) || isOrgMember(resource.data.organizationId);
      allow create: if isSuperAdmin() || isOrgAdmin(request.resource.data.organizationId);
      allow update: if isSuperAdmin() || isOwner(userId);
      allow delete: if isSuperAdmin() || isOrgAdmin(resource.data.organizationId);
    }
    
    // Collection: projects
    match /projects/{projectId} {
      allow read, write: if isSuperAdmin() || isOrgMember(resource.data.organizationId);
    }
    
    // Collection: tickets
    match /tickets/{ticketId} {
       allow read, write: if isSuperAdmin() || isOrgMember(resource.data.organizationId);
    }

    // Collection: proposals
    match /proposals/{proposalId} {
       allow read, write: if isSuperAdmin() || isOrgMember(resource.data.organizationId);
    }

    // Collection: invoices
    match /invoices/{invoiceId} {
       allow read, write: if isSuperAdmin() || isOrgMember(resource.data.organizationId);
    }
    
    // Collection: clientReports
    match /clientReports/{reportId} {
        allow read, write: if isSuperAdmin() || isOrgMember(resource.data.organizationId);
    }

    // Collection: chats & sub-collections
    match /chats/{chatId} {
      allow read, write: if isSuperAdmin() || request.auth.uid in resource.data.userIds;
      
      match /messages/{messageId} {
        allow read, write: if isSuperAdmin() || request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      }
    }

    // Collection: notifications
    match /notifications/{notificationId} {
      allow read, write: if isSuperAdmin() || isOwner(resource.data.userId);
    }

    // Collection: supportTickets
    match /supportTickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isSuperAdmin();
    }
  }
}
